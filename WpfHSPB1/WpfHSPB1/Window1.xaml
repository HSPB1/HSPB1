<Window x:Class="WpfHSPB1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHSPB1"
        mc:Ignorable="d"
                  Title="Pro.File Rechner" Icon="Frontbild_Programmicon.png"  MinWidth="400" MinHeight="200" Height="500" Width="600" >

    <!--Background Farbe-->
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF28354C" Offset="0.155"/>
            <GradientStop Color="#FF7493CC" Offset="1"/>

        </LinearGradientBrush>
    </Window.Background>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image Margin="10" Width="250" Height="150" Grid.Row="0" Source="/Frontbild_Programmicon.png"></Image>


            <TreeView x:Name="VerzeichnisProfile" Margin="10" Grid.Row="1" >


                <TreeViewItem Header="Rechteckige Profile">
                    <TreeViewItem Header="Vollmaterial">
                        <TreeViewItem Header="Vierkant Profil"/>
                        <TreeViewItem Header="Flach Profil"/>
                    </TreeViewItem>

                    <TreeViewItem Header="HohlProfile">
                        <TreeViewItem Header="Quadrahtrohr"/>
                        <TreeViewItem Header="Rechteckrohr" />
                    </TreeViewItem>

                </TreeViewItem>

                <TreeViewItem Header="Runde Profile">


                    <TreeViewItem Header="Vollmaterial">
                        <TreeViewItem Header="Rund Profil"/>
                        <TreeViewItem Header="Halbrund Profil"/>
                    </TreeViewItem>

                    <TreeViewItem Header="Hohlprofile">
                        <TreeViewItem Header="Rohre"></TreeViewItem>
                    </TreeViewItem>

                </TreeViewItem>









            </TreeView>






        </Grid>

        <StackPanel Grid.Column="1">

            <Label Foreground="White">adaf</Label>
            <TextBox></TextBox>



        </StackPanel>


    </Grid>






</Window>

